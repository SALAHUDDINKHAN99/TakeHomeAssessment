						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Copy Denormalized Tables To SnowFlake",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
